# Entra ID Configuration (Next.js uses NEXT_PUBLIC_ prefix for client-side env vars)
NEXT_PUBLIC_ENTRA_CLIENT_ID=<your-client-id>
NEXT_PUBLIC_ENTRA_TENANT_ID=<your-tenant-id>
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000

# API Scope (use the scope you created in "Expose an API")
NEXT_PUBLIC_API_SCOPE=api://<your-client-id>/access

# Node.js API URL
NEXT_PUBLIC_API_URL=http://localhost:3001
