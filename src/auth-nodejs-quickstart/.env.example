# Entra ID Configuration
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_ID=your-api-client-id
ENTRA_AUDIENCE=your-api-audience

# Cosmos DB
COSMOS_ENDPOINT=your-cosmos-endpoint
COSMOS_DATABASE=your-database-name
COSMOS_CONTAINER=your-container-name

# Application Insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://region.applicationinsights.azure.com/;LiveEndpoint=https://region.livediagnostics.monitor.azure.com/

# Cache Configuration
CACHE_ENABLED=true
# Options: memory, redis, none
CACHE_TYPE=memory

# Azure Redis Enterprise Configuration (only required if CACHE_TYPE=redis)
# Uses DefaultAzureCredential for authentication (az login locally, Managed Identity in production)
# REDIS_HOST=your-redis-name.redis.azure.net
# REDIS_PORT=10000

# Cache TTLs (in seconds)
CACHE_TTL_USER=3600
CACHE_TTL_PROJECT_ACCESS=1800
CACHE_TTL_USER_PROJECTS=600

# App
PORT=3001
FRONTEND_URL=http://localhost:3000
NODE_ENV=development